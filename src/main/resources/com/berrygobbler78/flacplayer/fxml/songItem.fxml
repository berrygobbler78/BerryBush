<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="60.0" style="-fx-background-color: #202020; -fx-background-radius: 25;" styleClass="transparent" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.berrygobbler78.flacplayer.controllers.SongItemController">
   <children>
      <BorderPane prefHeight="60.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <left>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" BorderPane.alignment="CENTER">
               <children>
                  <StackPane fx:id="stackPane" onMousePressed="#playSong" stylesheets="@../css/songItem.css">
                     <children>
                        <ImageView fx:id="playIV" fitHeight="30.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../graphics/play.png" />
                           </image>
                        </ImageView>
                        <Label fx:id="songNumberLabel" text="#" textFill="#a1a1a1">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" right="5.0" />
                     </HBox.margin>
                  </StackPane>
                  <ImageView fx:id="songAlbumIV" fitHeight="150.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../graphics/default_album_image.jpg" />
                     </image>
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </ImageView>
                  <VBox alignment="CENTER_LEFT" prefHeight="60.0">
                     <children>
                        <Label fx:id="songTitleLabel" prefHeight="17.0" prefWidth="220.0" text="SONGTITLE" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="songArtistLabel" prefHeight="15.0" text="Artist" textFill="#a1a1a1">
                           <font>
                              <Font size="10.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </left>
         <right>
            <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
               <children>
                  <MenuButton fx:id="menuButton" mnemonicParsing="false" popupSide="TOP" styleClass="transparent" stylesheets="@../css/menuButton.css">
                    <items>
                        <Menu fx:id="playlistMenu" mnemonicParsing="false" text="Playlists" />
                      <MenuItem mnemonicParsing="false" onAction="#addToQueue" text="Add to Queue" />
                      <MenuItem mnemonicParsing="false" text="Open in Explorer" />
                    </items>
                     <graphic>
                        <ImageView fitHeight="150.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../graphics/vertical_menu.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </MenuButton>
               </children>
            </HBox>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
